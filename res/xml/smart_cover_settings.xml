<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/smart_cover_title">

    <PreferenceCategory
        android:key="lid_settings"
        android:title="@string/lid_settings_title">

        <!-- Lid controls sleep -->
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="lid_controls_sleep"
            android:title="@string/lid_controls_sleep_title"
            android:summary="@string/lid_controls_sleep_summary"
            android:defaultValue="false" />

        <!-- Lid controls wake -->
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="lid_controls_wake"
            android:title="@string/lid_controls_wake_title"
            android:summary="@string/lid_controls_wake_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
